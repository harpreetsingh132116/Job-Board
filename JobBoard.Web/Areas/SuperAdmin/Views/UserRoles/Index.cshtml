
@{
    /**/
    Layout = "~/Areas/superadmin/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Index";
}

<div class="JobPortal-aboutUsPage darkbg">
    <div class="container">
        <h2>Manage User Roles</h2>
        <div class="JobPortal-aboutUsPage">
            <input type="button" name="btnAddNew" id="btnAddNew" value="Add New User Role" />
            <div class="clearfix"></div>
            <div>
                <div id="dvToAcademyTeams"></div>
            </div>
            <div class="clearfix"></div>
            <div id="myModal" title="Update Region" class="AddPoll">
                <div class="modal-content1">
                    <div class="modal-header1">
                        <h4 class="modal-title" id="myModalLabel">Insert/Update User Role</h4>
                    </div>
                    <div class="modal-body pollPopupContent">
                        <div class="PollRow">
                            <input type="hidden" id="hdnUserRoleId" />
                        </div>
                        <div class="PollRow">
                            <div class="PollLeft">Role Name:</div>
                            <div class="PollRight"><input id="txtRoleName" type="text" /> </div>
                            <div class="PollRight"><span id="sptxtRoleName" style="color:red;display:none">Enter Role Name</span> </div>
                        </div>

                        <div class="PollRow">
                            <div class="PollButton">
                                <button type="button" onclick="UpdateAcademyTeamById();" id="btn_AddNewAcademy" class="btn btn-primary">Submit</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Partial("_ListRefrences")

<script src="~/Areas/SuperAdmin/Scripts/ManageUserRoles.js"></script>
