
@{
    ViewBag.Title = "Job Time Mapping";
}
<style>
    #div1, #div2, #div3 {
        float: left;
        width: 100px;
        height: 35px;
        margin: 10px;
        padding: 10px;
        border: 1px solid black;
    }
</style>
<strong> Time</strong><br />
<div style="position:absolute; max-height: 400px; width:90.7%;
    overflow: scroll; border:2px solid black;" ondragover="allowDrop(event)" id="dvtiming"></div>
<br clear="all" />
